<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.neo.bluetoothtesttool.MainActivity"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open BT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close BT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client BT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_Server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server BT"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/top"
        android:layout_toEndOf="@+id/top"
        android:layout_toRightOf="@+id/top"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_stopSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Search BT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be Discover BT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test BT"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid BT"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sec"
        android:orientation="vertical">

        <ListView
            android:id="@+id/list_DeviceID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"></ListView>

        <ListView
            android:id="@+id/list_Log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"></ListView>
    </LinearLayout>
</RelativeLayout>
